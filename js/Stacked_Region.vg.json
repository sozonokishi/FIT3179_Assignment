{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "white",
  "padding": 5,
  "width": 800,
  "height": 600,
  "style": "cell",
  "data": [
    {
      "name": "source_0",
      "url": "https://raw.githubusercontent.com/weihan-tan0035/FIT3179_Assignment/main/data/seasonInfectedRegion.csv",
      "format": {"type": "csv", "delimiter": ","},
      "transform": [
        {"type": "filter", "expr": "Region==null||datum.Region==Region"},
        {
          "type": "aggregate",
          "groupby": ["Season", "Region", "Infected"],
          "ops": ["sum"],
          "fields": ["Infected"],
          "as": ["sum_Infected"]
        },
        {
          "type": "stack",
          "groupby": ["Season"],
          "field": "sum_Infected",
          "sort": {"field": ["Region"], "order": ["descending"]},
          "as": ["sum_Infected_start", "sum_Infected_end"],
          "offset": "zero"
        },
        {
          "type": "filter",
          "expr": "isValid(datum[\"sum_Infected\"]) && isFinite(+datum[\"sum_Infected\"])"
        }
      ]
    }
  ],
  "signals": [
    {
      "name": "Region",
      "bind": {
        "input": "select",
        "options": [
          null,
          "CAPITAL DISTRICT",
          "CENTRAL",
          "METRO",
          "NYC",
          "WESTERN"
        ],
        "labels": [
          "Show All",
          "Capital District",
          "Central New york",
          "New York metropolitan area",
          "New York City",
          "Western New York"
        ],
        "name": "Region:"
      }
    }
  ],
  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "data": "source_0",
          "name": "stack_group_main",
          "groupby": ["Season"],
          "aggregate": {
            "fields": [
              "sum_Infected_start",
              "sum_Infected_start",
              "sum_Infected_end",
              "sum_Infected_end"
            ],
            "ops": ["min", "max", "min", "max"]
          }
        }
      },
      "encode": {
        "update": {
          "x": {"scale": "x", "field": "Season"},
          "width": {"scale": "x", "band": 1},
          "y": {
            "signal": "min(scale('y',datum[\"min_sum_Infected_start\"]),scale('y',datum[\"max_sum_Infected_start\"]),scale('y',datum[\"min_sum_Infected_end\"]),scale('y',datum[\"max_sum_Infected_end\"]))"
          },
          "y2": {
            "signal": "max(scale('y',datum[\"min_sum_Infected_start\"]),scale('y',datum[\"max_sum_Infected_start\"]),scale('y',datum[\"min_sum_Infected_end\"]),scale('y',datum[\"max_sum_Infected_end\"]))"
          },
          "clip": {"value": true},
          "cornerRadiusTopLeft": {"value": 3},
          "cornerRadiusTopRight": {"value": 3}
        }
      },
      "marks": [
        {
          "type": "group",
          "encode": {
            "update": {
              "y": {"field": {"group": "y"}, "mult": -1},
              "width": {"field": {"group": "width"}}
            }
          },
          "marks": [
            {
              "name": "marks",
              "type": "rect",
              "style": ["bar"],
              "from": {"data": "stack_group_main"},
              "encode": {
                "update": {
                  "fill": {"scale": "color", "field": "Region"},
                  "tooltip": {
                    "signal": "{\"Region\": isValid(datum[\"Region\"]) ? datum[\"Region\"] : \"\"+datum[\"Region\"], \"Infected\": format(datum[\"Infected\"], \",\")}"
                  },
                  "ariaRoleDescription": {"value": "bar"},
                  "description": {
                    "signal": "\"Season: \" + (isValid(datum[\"Season\"]) ? datum[\"Season\"] : \"\"+datum[\"Season\"]) + \"; Sum of Infected: \" + (format(datum[\"sum_Infected\"], \"\")) + \"; Region: \" + (isValid(datum[\"Region\"]) ? datum[\"Region\"] : \"\"+datum[\"Region\"]) + \"; Infected: \" + (format(datum[\"Infected\"], \",\"))"
                  },
                  "width": {"field": {"group": "width"}},
                  "y": {"scale": "y", "field": "sum_Infected_end"},
                  "y2": {"scale": "y", "field": "sum_Infected_start"}
                }
              }
            }
          ]
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "band",
      "domain": {"data": "source_0", "field": "Season", "sort": true},
      "range": [0, {"signal": "width"}],
      "paddingInner": 0.1,
      "paddingOuter": 0.05
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "data": "source_0",
        "fields": ["sum_Infected_start", "sum_Infected_end"]
      },
      "range": [{"signal": "height"}, 0],
      "nice": true,
      "zero": true
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": ["CAPITAL DISTRICT", "CENTRAL", "METRO", "NYC", "WESTERN"],
      "range": ["#e41a1c", "#984ea3", "#ff7f00", "#a6cee3", "#377eb8"]
    }
  ],
  "axes": [
    {
      "scale": "y",
      "orient": "left",
      "gridScale": "x",
      "grid": true,
      "tickCount": {"signal": "ceil(height/40)"},
      "domain": false,
      "labels": false,
      "aria": false,
      "maxExtent": 0,
      "minExtent": 0,
      "ticks": false,
      "zindex": 0
    },
    {
      "scale": "x",
      "orient": "bottom",
      "grid": false,
      "title": "Season",
      "labelAlign": "right",
      "labelAngle": 270,
      "labelBaseline": "middle",
      "zindex": 0
    },
    {
      "scale": "y",
      "orient": "left",
      "grid": false,
      "title": "Sum of Infected",
      "labelOverlap": true,
      "tickCount": {"signal": "ceil(height/40)"},
      "zindex": 0
    }
  ],
  "legends": [{"title": "Region", "fill": "color", "symbolType": "square"}],
  "config": {}
}